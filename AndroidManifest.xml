<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.masum.securegallery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="fi.masum.securegallery.SkyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
          
        <activity
            android:name="fi.masum.securegallery.RegisterUser"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        </activity>
        
        <activity
            android:name="fi.masum.securegallery.Login"
            android:label="@string/title_activity_secure_note" >
        </activity>
        <activity
            android:name="fi.masum.securegallery.RecoverPass"
            android:label="@string/title_activity_recover_pass" >
        </activity>
        <activity
            android:name="fi.masum.securegallery.SignInActivity"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name="fi.masum.securegallery.FilePicker"
            android:label="@string/title_activity_file_picker" >
        </activity>
        <activity
            android:name="fi.masum.securegallery.SkyDriveActivity"
            android:label="@string/title_activity_sky_drive" >
        </activity>
        <activity
            android:name="fi.masum.securegallery.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        
          
        <activity
            android:name="fi.masum.securegallery.MainActivity"
            android:label="@string/title_activity_main" 
             android:theme="@style/Theme.Sherlock.Light.DarkActionBar">
            
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>